<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name = "TextFieldStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/task_text_size</item>
        <item name="android:padding">@dimen/task_item_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name = "EditFieldStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_text_size</item>
        <item name="android:padding">@dimen/task_item_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name = "TaskNameStyle">
        <item name="android:background">@color/pink_1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_text_size</item>
        <item name="android:padding">@dimen/task_item_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name = "TaskDoneFieldStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_text_size</item>
        <item name="android:padding">@dimen/task_item_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name = "Layout">
        <item name="android:background">@color/pink_0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/task_text_size</item>
        <item name="android:padding">@dimen/task_item_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>